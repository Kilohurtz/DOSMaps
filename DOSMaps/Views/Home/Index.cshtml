@{
    ViewBag.Title = "Home Page";
}

<div class="map">
    <h1>Interactive Church Map</h1>
    <div class="front">
        <div id="perspective" class="world">

        </div>

        <div class="components">
            <!--
            dropdown menu
            -->
            <select class="continents">
                <option value="world">World</option>
                <option value="asia">Asia</option>
                <option value="africa">Africa</option>
                <option value="oceania">Oceania</option>
                <option value="europe">Europe</option>
                <option value="north-america">North America</option>
                <option value="south-america">South America</option>
            </select>
            <!--
            radiobuttons
            -->
            <form class="toolbar">
                <input id="r1" class="rbutton" type="radio" name="radiobuttons" value="c/p">
                <label for="r1">churches/people</label>
                <input id="r2" class="rbutton" type="radio" name="radiobuttons" value="pf">
                <label for="r2">praying for</label>
                <input id="r3" class="rbutton" type="radio" name="radiobuttons" value="rpf">
                <label for="r3">receiving prayers from</label>
            </form>
        </div>
    </div> 
</div>